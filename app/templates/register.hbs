<div class="h-screen bg-indigo-light overflow-hidden">
    <div class="w-full max-w-lg mx-auto mt-8">
        {{#if errorMessage}}
            {{component 'alert-errors' errorMessage=errorMessage}}
        {{/if}}
        <div class="bg-white shadow-md rounded-lg px-8 pt-6 pb-8 mb-4">
            <form {{action "authenticate" on="submit"}} class="flex flex-wrap -mx-3">
                <div class="w-1/2 px-3">
                    <div class="mb-4">
                        <label class="block text-grey-darker text-sm font-bold mb-2" for="email">
                            Email
                        </label>
                        {{input id="email" value=email class="shadow appearance-none border rounded w-full py-2 px-3 text-grey-darker" placeholder="Email"}}
                    </div>
                    <div class="mb-4">
                        <label class="block text-grey-darker text-sm font-bold mb-2" for="nickname">
                            Nombre de usuario
                        </label>
                        {{input id="nickname" value=nickname class="shadow appearance-none border rounded w-full py-2 px-3 text-grey-darker" placeholder="Nombre de usuario"}}
                    </div>
                    <div class="mb-6">
                        <label class="block text-grey-darker text-sm font-bold mb-2" for="password">
                            Contraseña
                        </label>
                        {{input type="password" id="password" value=password class="shadow appearance-none border rounded w-full py-2 px-3 text-grey-darker mb-3" placeholder="Contraseña"}}
                    </div>
                </div>
                <div class="w-1/2 px-3">
                    <div class="flex flex-wrap justify-between items-center mb-4">
                        <div class="w-1/2 px-3">
                            <label class="block w-full text-grey-darker text-sm font-bold mb-2" for="name">
                                Nombre
                            </label>
                            {{input id="name" value=name class="w-full shadow appearance-none border rounded py-2 px-3 text-grey-darker" placeholder="Nombre"}}
                        </div>
                        <div class="w-1/2 px-3">
                            <label class="block w-full text-grey-darker text-sm font-bold mb-2" for="surname">
                                Apellidos
                            </label>
                            {{input id="surname" value=surname class="w-full shadow appearance-none border rounded py-2 px-3 text-grey-darker" placeholder="Apellidos"}}
                        </div>
                    </div>
                    <div class="w-full px-3 mb-4">
                        <label class="block text-grey-darker text-sm font-bold mb-2" for="country">
                            País
                        </label>
                        <div class="relative w-full">
                            <select class="block appearance-none w-full bg-white border border-grey-light hover:border-grey px-4 py-2 pr-8 rounded shadow">
                                <option>Selecciona una opción</option>
                                <option>Option 2</option>
                                <option>Option 3</option>
                            </select>
                            <div class="pointer-events-none absolute pin-y pin-r flex items-center px-2 text-grey-darker">
                                <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/></svg>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="flex flex-col w-1/2 text-center mx-auto">
                    <button type="submit" class="block w-full bg-indigo text-white text-center border-b-4 border-indigo-dark rounded font-semibold px-1 py-2 mb-3">
                        Crear cuenta
                    </button>

                    <div class="flex justify-around items-center w-full font-bold text-sm">
                        {{#link-to 'login' class="hover:text-indigo-darker"}}
                            Acceso
                        {{/link-to}}
                        <span class="text-indigo-dark">&bull;</span>
                        {{#link-to 'recover' class="hover:text-indigo-darker"}}
                            Recordar contraseña
                        {{/link-to}}
                        <span class="text-indigo-dark">&bull;</span>
                        {{#link-to 'page.policies' class="hover:text-indigo-darker"}}
                            Términos y condiciones
                        {{/link-to}}
                    </div>
                </div>
            </form>
        </div>
        <p class="text-center text-white text-sm">
            © 2018 Social-chan. All rights reserved.
        </p>
    </div>
</div>