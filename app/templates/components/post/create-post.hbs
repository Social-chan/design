<form {{action "createPost" on="submit"}}
  class="flex flex-col justify-between bg-white rounded shadow leading-normal p-4 mb-3">
  {{textarea id="content" value=content rows="4" class="ui-input mb-3" placeholder=placeholder}}

  <div class="flex items-center justify-between">
    <div class="w-5/6">
      <button {{action "wrap" "![texto altenativo](url)"}} class="ui-btn ui-btn--secondary" title="Añadir imagen">
        <i class="fas fa-image"></i>
      </button>
      <button {{action "wrap" "![youtube video](url)"}} class="ui-btn ui-btn--secondary text-red" title="Añadir video">
        <i class="fab fa-youtube"></i>
      </button>
      <button {{action "wrap" "[texto](url)"}} class="ui-btn ui-btn--secondary text-blue" title="Añadir enlace">
        <i class="fas fa-link"></i>
      </button>
      <button {{action "spoiler"}} class="ui-btn ui-btn--secondary" title="Marcar publicación como spoiler">
        {{#if isSpoiler}}
          <i class="far fa-eye-slash"></i>
        {{else}}
          <i class="fas fa-eye"></i>
        {{/if}}
      </button>
      <button {{action "info"}} class="ui-btn ui-btn--secondary" title="Información">
        <i class="fas fa-info mx-1"></i>
      </button>
    </div>
    <div class="w-1/6 flex justify-end">
      <button type="submit" class="ui-btn ui-btn--primary lg:w-full">
        <i class="fas fa-paper-plane lg:hidden"></i>
        <span class="hidden lg:inline">Enviar</span>
      </button>
    </div>
  </div>
</form>
