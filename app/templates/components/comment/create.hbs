<form {{action "create" on="submit"}} class="flex items-center mt-2">
  <img class="flex-no-shrink w-8 h-8 bg-grey rounded-full mr-3" src={{auth.user.profile.avatar}} alt="">
  <div class="inline-block relative flex items-center w-full rounded-full">
    {{textarea value=content rows="1" class="appearance-none w-full bg-white text-grey-dark shadow rounded-full px-4 py-2 pr-9 resize-none" placeholder="Escribe un comentario..." keyDown=(action "handleSubmit")}}
    {{!-- {{input type="text" value=content class="w-full appearance-none bg-white text-grey-dark border border-grey-light rounded-full px-4 py-2 pr-9" placeholder="Escribe un comentario..." autocomplete="off"}} --}}
    <div class="absolute pin-y pin-r flex items-center pr-4">
      <a href="#" class="text-grey-dark mr-2">
        <i class="far fa-smile fill-current"></i>
      </a>
      <a href="#" class="text-grey-dark">
        <i class="fas fa-camera fill-current"></i>
      </a>
    </div>
  </div>
</form>