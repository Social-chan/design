<div class="bg-white rounded shadow flex flex-col justify-between leading-normal mb-3">
  <div class="p-4">
    <div class="text-sm text-grey-dark flex items-center">
      <div class="mr-auto">
        {{#if post.isSticky}}
          <i class="fas fa-thumbtack mr-2"></i>
          Ha fijado una <a href="#" class="no-underline font-medium text-grey-dark ml-1">publicación</a>
        {{else}}
          <i class="fas fa-comment mr-2"></i>
          Ha creado una <a href="#" class="no-underline font-medium text-grey-dark ml-1">publicación</a>
        {{/if}}
      </div>
      <a class="text-grey-dark" href="#">
        <i class="fas fa-ellipsis-h fill-current"></i>
        {{#attach-tooltip class="flex flex-col max-w-xs rounded text-sm text-left text-black" showDelay=300 lazyRender=true interactive=true}}
          <div class="rounded-t hover:bg-indigo hover:text-white cursor-pointer p-2">
            <i class="fas fa-edit fa-fw"></i>
            Editar
          </div>
          {{#if (not-eq session.user.id post.author.id)}}
            <div class="hover:bg-indigo hover:text-white cursor-pointer p-2">
              <i class="fas fa-flag fa-fw"></i>
              Reportar
            </div>
          {{else}}
            {{#if post.isSticky}}
              <div {{action 'addPin'}} class="hover:bg-indigo hover:text-white cursor-pointer p-2">
                <i class="fas fa-thumbtack fa-fw"></i>
                Desfijar
              </div>
            {{else}}
              <div {{action 'addPin'}} class="hover:bg-indigo hover:text-white cursor-pointer p-2">
                <i class="fas fa-thumbtack fa-fw"></i>
                Fijar
              </div>
            {{/if}}
          {{/if}}
          <div class="rounded-b hover:bg-red hover:text-white cursor-pointer p-2">
            <i class="far fa-trash-alt fa-fw"></i>
            Eliminar
          </div>
        {{/attach-tooltip}}
      </a>
    </div>
    <p class="text-grey-darkest text-base mt-2">
      {{markdown-to-html post.content extensions='mention hashtag youtube'}}
    </p>
  </div>
  <div class="w-full flex items-center justify-between p-4">
    {{#link-to 'user' post.author.id class="inline-flex items-center"}}
      <img class="w-10 h-10 bg-grey rounded-full mr-3" src="{{post.author.profile.avatar}}">
      <div class="text-sm">
        <p class="leading-none">
          {{post.author.nickname}}
        </p>
        <p class="text-grey-dark">
          {{moment-from-now post.created_at}}
        </p>
      </div>
      {{#attach-tooltip class="w-64 rounded-lg" showDelay=300 lazyRender=true interactive=true}}
        {{component 'user/user-hovercard' user=post.author}}
      {{/attach-tooltip}}
    {{/link-to}}
    <div class="flex items-center text-grey-dark text-xs ml-auto">
      <a {{action "toggleActive"}} href="#" class="text-sm text-right">
        <p class="leading-none">
          {{post.kokoros_count}} kokoros
        </p>
        <p class="text-grey-dark">
          {{post.comments_count}} comentarios
        </p>
      </a>
      {{component 'kokoro-button' post=post isKokored=post.kokored}}
    </div>
  </div>
  {{#if isActive}}
    <div class="flex flex-col bg-grey-light border-t border-grey rounded-b text-grey-darkest text-sm p-4">
      {{#each post.comments as |comment|}}
        {{component 'user-comment' post=post comment=comment}}
      {{/each}}
      <form {{action "createComment" on="submit"}} class="flex items-center mt-2">
        <img class="w-8 h-8 bg-grey rounded-full mr-3" src="{{session.user.profile.avatar}}">
        <div class="inline-block relative w-full rounded-full">
          {{input type="text" value=content class="w-full appearance-none bg-white text-grey-dark border border-grey rounded-full px-4 py-2 pr-9" placeholder="Escribe un comentario..." autocomplete="off"}}
          <div class="absolute pin-y pin-r flex items-center pr-4">
            <a href="#" class="text-grey-dark mr-2">
              <i class="far fa-smile fill-current"></i>
            </a>
            <a href="#" class="text-grey-dark">
              <i class="fas fa-camera fill-current"></i>
            </a>
          </div>
        </div>
      </form>
    </div>
  {{/if}}
</div>