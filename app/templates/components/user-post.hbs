<div class="bg-white border border-grey-light rounded shadow flex flex-col justify-between leading-normal p-4 mb-3">
  <div class="mb-8">
    <p class="text-sm text-grey-dark flex items-center">
      <i class="fas fa-comment mr-2"></i>
      Ha creado una <a href="#" class="no-underline font-medium text-grey-dark ml-1">publicaci√≥n</a>
    </p>
    <p class="text-grey-darkest text-base mt-2">
      {{post.content}}
    </p>
  </div>
  <div class="w-full flex items-center justify-between mt-4">
    {{#link-to 'user' post.author.id class="inline-flex items-center"}}
      <img class="w-10 h-10 rounded-full mr-3" src="{{post.author.profile.avatar}}" alt="avatar de {{post.author.nickname}}">
      <div class="text-sm">
        <p class="leading-none">
          {{post.author.nickname}}
        </p>
        <p class="text-grey-dark">
          {{moment-from-now post.created_at}}
        </p>
      </div>
    {{/link-to}}
    <div class="flex items-center text-grey-dark text-xs ml-auto">
      <div class="text-sm text-right">
        <a href="#" class="text-indigo-darkest no-underline">
          1 kokoro
        </a>
        <p class="text-grey-dark text-xs">
          3 comentarios
        </p>
      </div>
      <button class="bg-indigo-dark hover:bg-indigo-darker text-white rounded-full p-3 ml-3">
        <i class="fas fa-heart fa-lg"></i>
      </button>
    </div>
  </div>
</div>