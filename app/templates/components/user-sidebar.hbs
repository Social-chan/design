<!-- User / Nav sidebar -->
<div class="bg-indigo-darkest text-purple-lighter flex-none p-4 h-full z-50 hidden md:block">
  {{#link-to 'user' class="block opacity-50 no-underline mb-4" activeClass="opacity-75"}}
    <div class="bg-white h-12 w-12 flex items-center justify-center text-black text-2xl font-semibold rounded-full mb-1 overflow-hidden">
      <img src="img/user_default.jpg" alt="">
