<form {{action "register" on="submit"}} class="flex flex-col w-full">
  {{#if errorMessage}}
    {{component "layout/layout/alert-errors" errorMessage=errorMessage}}
  {{/if}}
  <div class="flex flex-col md:flex-row">
    <div class="w-full md:w-1/2 md:pr-4 mb-6">
      <label class="block uppercase tracking-wide text-white text-xs font-bold mb-2" for="grid-first-name">
        Nombre
      </label>
      {{input class="appearance-none block w-full bg-grey-lighter text-indigo-darkest border border-indigo rounded py-3 px-4" id="grid-first-name" type="text" placeholder="Miku" value=name}}
    </div>
    <div class="w-full md:w-1/2 md:pl-4 mb-6">
      <label class="block uppercase tracking-wide text-white text-xs font-bold mb-2" for="grid-last-name">
        Apellidos
      </label>
      {{input class="appearance-none block w-full bg-grey-lighter text-indigo-darkest border border-indigo rounded py-3 px-4" id="grid-last-name" type="text" placeholder="Hatsune" value=surname}}
    </div>
  </div>
  <div class="flex flex-col w-full mb-6">
    <label class="block uppercase tracking-wide text-white text-xs font-bold mb-2" for="grid-user-email">
      Email
    </label>
    {{input class="appearance-none block bg-grey-lighter text-indigo-darkest border border-indigo rounded py-3 px-4" id="grid-user-email" type="email" placeholder="miku@vocaloid.moe" value=email}}
  </div>
  <div class="flex flex-col w-full mb-6">
    <label class="block uppercase tracking-wide text-white text-xs font-bold mb-2" for="grid-user-name">
      Nombre de usuario
    </label>
    {{input class="appearance-none block bg-grey-lighter text-indigo-darkest border border-indigo rounded py-3 px-4" id="grid-user-name" type="text" placeholder="@miku" value=nickname}}
  </div>
  <div class="flex flex-col w-full mb-6">
    <label class="block uppercase tracking-wide text-white text-xs font-bold mb-2" for="grid-password">
      Contraseña
    </label>
    {{input class="appearance-none block bg-grey-lighter text-indigo-darkest border border-indigo rounded py-3 px-4 mb-3" id="grid-password" type="password" placeholder="Mi waifu secreta... woops!" value=password}}
  </div>
  <div class="flex flex-col w-full">
    <button type="submit" class="block bg-indigo-dark text-white border-b-4 border-indigo-darker rounded font-semibold py-3">
      Crear cuenta
    </button>
    <p class="text-white text-sm text-center mt-3">
      Al crear cuenta en este sitio estas aceptando los
      {{#link-to "page.policies" class="text-indigo-dark"}}
        Términos y condiciones
      {{/link-to}} del mismo.
    </p>
  </div>
</form>