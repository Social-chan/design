<div class="w-full h-18 rounded-t-lg bg-grey-light bg-cover bg-no-repeat" style={{bg-image user.profile.bg_image}}></div>
<div class="absolute pin flex items-center justify-between px-3">
  <img src={{user.profile.avatar}} class="w-16 h-16 bg-grey rounded-full border-white border-2" alt="">

  {{#if (not user.isLoggedIn)}}
    {{#if user.following}}
      <button class="self-center shadow bg-white rounded-full text-indigo-darker text-sm p-2 ml-2">
        <i class="fas fa-user-times"></i>
      </button>
      <button class="self-center shadow bg-white rounded-full text-indigo-darker text-sm p-2">
        <i class="fas fa-comment-alt"></i>
      </button>
    {{else}}
      <button class="self-center shadow bg-white rounded-full text-indigo-darker text-sm p-2 ml-2">
        <i class="fas fa-user-plus"></i>
      </button>
    {{/if}}
  {{/if}}
</div>
<div class="truncate px-3 py-4 mt-6">
  <h3 class="inline text-black font-normal font-sans">
    {{user.nickname}}
  </h3>
  <p class="inline font-sans font-light truncate text-sm text-grey-dark">
    {{user.profile.bio}}
  </p>
</div>
