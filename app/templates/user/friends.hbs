<div class="bg-white rounded shadow p-4 mb-4">
  <h3 class="text-lg text-indigo-darkest font-bold mb-3">
    <i class="fas fa-user-check fa-fw"></i>
    Invitaciones pendientes
  </h3>

  <div class="relative w-full">
    {{#swiper-container class="text-center" keyboard=true mousewheel=true slidesPerView=(if (media "isTablet") 5 3)}}
      {{#each model as |friend|}}
        {{#swiper-slide}}
          {{#link-to "user" friend.id}}
            <img class="w-24 h-auto bg-grey rounded-full" src={{friend.profile.avatar}} alt="">
          {{/link-to}}

          <div class="flex items-center justify-around px-6">
            <a href="#" class="w-8 h-8 flex-no-shrink self-center bg-indigo-lighter border-b-2 border-indigo-light text-indigo-darkest rounded-full p-2">
              <i class="fas fa-check fill-current"></i>
            </a>

            <a href="#" class="w-8 h-8 flex-no-shrink self-center bg-red-light border border-b-2 border-red text-red-darkest rounded-full p-2">
              <i class="fas fa-times fill-current"></i>
            </a>
          </div>
        {{/swiper-slide}}
      {{/each}}
    {{/swiper-container}}
  </div>
</div>

<div class="bg-white rounded shadow p-4">
  <div class="flex flex-wrap items-center">
    {{#each model as |friend|}}
      <div class="w-full md:w-1/2 lg:w-1/3 px-2 mb-4">
        <div class="relative flex flex-col shadow rounded-lg">
          <div class="w-full h-18 rounded-t-lg bg-grey-light bg-cover bg-no-repeat" style={{bg-image friend.profile.bg_image}}></div>
          <div class="absolute pin flex items-center justify-between px-3">
            <img src={{friend.profile.avatar}} class="w-16 h-16 bg-grey rounded-full border-white border-2" alt="">

            {{#if (not friend.isLoggedIn)}}
              {{#if friend.following}}
                <button class="self-center shadow bg-white rounded-full text-indigo-darker text-sm p-2 ml-2">
                  <i class="fas fa-user-times"></i>
                </button>
                <button class="self-center shadow bg-white rounded-full text-indigo-darker text-sm p-2">
                  <i class="fas fa-comment-alt"></i>
                </button>
              {{else}}
                <button class="self-center shadow bg-white rounded-full text-indigo-darker text-sm p-2 ml-2">
                  <i class="fas fa-user-plus"></i>
                </button>
              {{/if}}
            {{/if}}
          </div>
          <div class="truncate px-3 py-4 mt-6">
            <h3 class="inline text-black font-normal font-sans">
              {{friend.nickname}}
            </h3>
            <p class="inline font-sans font-light truncate text-sm text-grey-dark">
              {{friend.profile.bio}}
            </p>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>
