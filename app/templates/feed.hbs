<div class="container mx-auto px-4 mt-4">
  <div class="flex">
    <div class="w-1/4 pr-4 hidden lg:block">
      <a class="no-underline block cursor-pointer bg-white hover:bg-indigo text-indigo hover:text-white shadow rounded p-4 mb-3">
        <p class="text-lg font-bold mb-2">
          Invita a tus amigos
        </p>
        Invita a todos tus amigos y empieza a compartir anime y manga con ellos.
      </a>
      {{#if (gt model.populars.length 0)}}
        <div class="bg-white shadow rounded p-4 mb-3">
          <p class="text-lg text-indigo-darkest font-bold mb-2">
            ¿Ves esto muy vacío?
          </p>
          <p class="mb-2">
            Sigue a estos usuarios populares
          </p>
          <ul class="list-reset">
            {{#each model.populars as |user|}}
              <li class="inline-flex items-center my-2">
                <img class="w-10 h-10 bg-grey rounded-full mr-3" src="{{user.profile.avatar}}">
                <span>
                  <a href="#" class="no-underline text-black font-bold">
                    {{user.profile.name}} {{user.profile.surname}}
                  </a>
                  <span class="text-grey-dark text-sm">
                    @{{user.nickname}}
                  </span>
                  {{component 'user/follow-button' isFollowed=data.following user_id=data.id}}
                </span>
              </li>
            {{/each}}
          </ul>
        </div>
      {{/if}}
      {{component 'ads-square'}}
      <div class="bg-white shadow rounded p-4 mb-3">
        <p class="text-lg text-indigo-darkest font-bold mb-2">
          <i class="fas fa-fire"></i> Lo más hablado
        </p>
        <ul class="list-reset">
          <li class="my-3">
            <a href="#" class="no-underline text-indigo-dark">
              Sword Art Online
            </a>
            <p class="text-sm text-grey-dark">
              Anime
            </p>
          </li>
          <li class="my-3">
            <a href="#" class="no-underline text-indigo-dark">
              Love Live! School Idol Project
            </a>
            <p class="text-sm text-grey-dark">
              Anime
            </p>
          </li>
          <li class="my-3">
            <a href="#" class="no-underline text-indigo-dark">
              Steins;gate 0
            </a>
            <p class="text-sm text-grey-dark">
              Anime
            </p>
          </li>
          <li class="my-3">
            <a href="#" class="no-underline text-indigo-dark">
              Citrus
            </a>
            <p class="text-sm text-grey-dark">
              Manga
            </p>
          </li>
        </ul>
      </div>
    </div>
    <div class="w-full lg:w-3/4 px-3">
      {{#each model.posts as |post|}}
        {{user-post post=post}}
      {{/each}}
    </div>
  </div>
</div>