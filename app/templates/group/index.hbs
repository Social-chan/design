<div class="container mx-auto px-4 mt-4">
  <div class="flex flex-col lg:flex-row">
    <div class="w-1/4 pr-4 hidden lg:block">
      <div class="bg-white shadow rounded p-4 mb-3">
        <p class="text-lg text-indigo-darkest font-bold mb-2">
          <i class="fas fa-users"></i> Tus grupos
        </p>
        <div class="flex my-3">
          {{#each model.myGroups as |mygroup|}}
            <div>
              {{#link-to 'group.show' mygroup.id}}
                <img class="w-10 h-10 rounded-full mr-3" src="{{mygroup.image}}">
              {{/link-to}}
            </div>
          {{/each}}
        </div>

        {{#link-to "group.found" class="block w-full bg-indigo text-white text-center border-b-4 border-indigo-dark rounded font-semibold px-1 py-2"}}
          <i class="fab fa-font-awesome-flag fa-fw"></i>
          Fundar grupo
        {{/link-to}}
      </div>
      <div class="bg-white shadow rounded p-4 mb-3">
        <p class="text-lg text-indigo-darkest font-bold mb-2">
          <i class="fas fa-filter"></i> Filtrar por
        </p>
        <p class="uppercase tracking-wide text-c2 mb-4">
          Categor√≠as
        </p>
        {{#each model.groupTypes as |type|}}
          <a href="#" class="flex border px-4 py-2 text-lg text-grey-darkest">
            <i class="{{type.icon}} mr-3"></i>
            {{type.name}}
          </a>
        {{/each}}
      </div>
    </div>
    <div class="w-full lg:w-3/4">
      <div class="flex flex-wrap bg-white shadow rounded p-4">
        <div class="flex flex-col">
          {{#each model.groups as |group|}}
            {{component 'group/group-single' group=group}}
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</div>