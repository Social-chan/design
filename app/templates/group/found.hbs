<div class="container mx-auto px-4 mt-4">
  <div class="flex">
    <div class="w-1/4 pr-4 hidden lg:block">
      <div class="bg-white rounded w-full shadow select-none overflow-hidden p-4 mb-3">
        <div class="w-32 h-32 flex flex-col justify-center items-center cursor-pointer border-2 border-dashed border-grey-darker mx-auto rounded-full">
          <i class="self-center text-grey-darker fill-current fas fa-upload"></i>
          <p class="self-center text-grey-darker">Subir imagen</p>
        </div>
      </div>
    </div>
    <div class="w-full md:w-3/4 bg-white rounded shadow p-4">
      <h2 class="text-indigo-darkest mb-6">
        Creación de grupo
      </h2>
      <form class="w-full">
        <div class="flex flex-wrap mb-6">
          <div class="w-full px-3">
            <label class="block uppercase tracking-wide text-indigo-darker text-xs font-bold mb-2" for="name">
              Nombre
            </label>
            {{input type="text" id="name" value=group.name class="appearance-none block w-full bg-grey-lighter text-indigo-darker rounded py-3 px-4 mb-3" placeholder="Nombre del grupo"}}
          </div>
          <div class="w-full px-3">
            <label class="block uppercase tracking-wide text-indigo-darker text-xs font-bold mb-2" for="about">
              Descripción
            </label>
            {{textarea id="about" value=group.about rows="4" class="appearance-none block w-full bg-grey-lighter text-indigo-darker rounded py-3 px-4" placeholder="Describe el grupo"}}
          </div>
        </div>
        <div class="flex items-center justify-between">
          <div></div>
          <button class="bg-indigo-dark hover:bg-indigo-darker text-white font-bold py-2 px-4 rounded">
            Fundar grupo
          </button>
        </div>
      </form>
    </div>
  </div>
</div>